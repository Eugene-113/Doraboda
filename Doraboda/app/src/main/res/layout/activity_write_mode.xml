<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WriteModeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/writeModeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/writeModeQuitImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_quit"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            />
        <TextView
            android:text="일기"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/writeModeSaveImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_save"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/writeModeView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/writeModeToolbar"
        />
    <EditText
        android:hint="일기를 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/writeModeView1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>