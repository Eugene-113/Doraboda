<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddEmotionActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/AddEmotionToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        >
    <ImageView
        android:id="@+id/AddEmotionQuitImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_quit"
        android:layout_gravity="start"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/AddEmotionDeleteImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_delete"
        android:layout_gravity="start"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/AddEmotionTextView1"
        android:text="오늘의 감정"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/AddEmotionSaveImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_check"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/AddEmotionView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/AddEmotionToolbar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/emotionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/AddEmotionToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>